<Window x:Class="Hull_Speed_lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hull_Speed_lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="531.2">
    <StackPanel Background="AntiqueWhite" Name="MainStackPanel" Orientation="Horizontal">
        <StackPanel>
            <WrapPanel>
                <Label Content="_Name:"/>
                <TextBlock MinWidth="200" Background="Aquamarine" x:Name="txtName"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="_Length:"/>
                <TextBlock MinWidth="50" MaxWidth="100" Background="#FF29D1D1" x:Name="txtLength"/>
                <Label Content="feet"></Label>
            </WrapPanel>

            <Button Padding="5" HorizontalAlignment="Center" Content="Calculate hull speed" Background="Aquamarine"></Button>
            
            <WrapPanel>
                <Label Content="Hull speed:"></Label>
                <Label Content="XXX"></Label>
                <Label Content="knots"></Label>
            </WrapPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Image Source="Sailboat.jpg"></Image>
        </StackPanel>
    </StackPanel>
</Window>
